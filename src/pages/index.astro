---
import BaseLayout from "@layout/BaseLayout.astro";
import { getTranslation } from "@utils/i18n";

// Static paths for language routes
export function getStaticPaths() {
  return [{ params: { lang: "ko" } }, { params: { lang: "en" } }];
}

// URL 파라미터에서 언어 추출
const { lang } = Astro.params;
const currentLang: "ko" | "en" = lang === "ko" || lang === "en" ? lang : "ko";
---

<BaseLayout lang={currentLang}>
  <!-- Hero Section -->
  <section
    class="relative flex min-h-screen items-center justify-center bg-gradient-to-br from-teal-50 to-blue-50"
  >
    <div class="pt-header absolute inset-0 bg-black/20"></div>
    <div class="relative z-10 px-4 text-center">
      <h1 class="mb-6 text-6xl font-bold text-white drop-shadow-lg md:text-8xl">
        {getTranslation("home.title", currentLang)}
      </h1>
      <p
        class="mx-auto mb-8 max-w-3xl text-xl whitespace-pre-line text-white drop-shadow-lg md:text-2xl"
      >
        {getTranslation("home.subtitle", currentLang)}
      </p>
      <!-- <p class="mb-12 text-lg text-white/90 drop-shadow-lg">
        {getTranslation("home.mission", currentLang)}
      </p> -->
    </div>
  </section>

  <!-- Quick Links Section -->
  <section class="bg-white py-20">
    <div class="container mx-auto px-4">
      <h2 class="mb-16 text-center text-4xl font-bold text-gray-800">
        {getTranslation("home.quick.links", currentLang)}
      </h2>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
        <!-- 소식 / News -->
        <a href={`/${currentLang}/events/news`} class="group">
          <div
            class="rounded-xl bg-teal-50 p-8 text-center transition-colors hover:bg-teal-100"
          >
            <div
              class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-teal-600 transition-colors group-hover:bg-teal-700"
            >
              <svg
                class="h-8 w-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                ></path>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-semibold text-gray-800">
              {getTranslation("home.news.card", currentLang)}
            </h3>
            <p class="text-gray-600">
              {getTranslation("home.news.desc", currentLang)}
            </p>
          </div>
        </a>

        <!-- 연례행사 / Annual Events -->
        <a href={`/${currentLang}/events/annual`} class="group">
          <div
            class="rounded-xl bg-teal-50 p-8 text-center transition-colors hover:bg-teal-100"
          >
            <div
              class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-teal-600 transition-colors group-hover:bg-teal-700"
            >
              <svg
                class="h-8 w-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10m2 8H5a2 2 0 01-2-2V9a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2z"
                ></path>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-semibold text-gray-800">
              {getTranslation("home.annual.card", currentLang)}
            </h3>
            <p class="text-gray-600">
              {getTranslation("home.annual.desc", currentLang)}
            </p>
          </div>
        </a>

        <!-- 동아리 / Clubs -->
        <a href={`/${currentLang}/clubs`} class="group">
          <div
            class="rounded-xl bg-teal-50 p-8 text-center transition-colors hover:bg-teal-100"
          >
            <div
              class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-teal-600 transition-colors group-hover:bg-teal-700"
            >
              <svg
                class="h-8 w-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-semibold text-gray-800">
              {getTranslation("home.clubs.card", currentLang)}
            </h3>
            <p class="text-gray-600">
              {getTranslation("home.clubs.desc", currentLang)}
            </p>
          </div>
        </a>

        <!-- 건의하기 / Suggestions -->
        <a href={`/${currentLang}/contact`} class="group">
          <div
            class="rounded-xl bg-teal-50 p-8 text-center transition-colors hover:bg-teal-100"
          >
            <div
              class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-teal-600 transition-colors group-hover:bg-teal-700"
            >
              <svg
                class="h-8 w-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 10h11M9 21V3m12 6h-5m5 6h-5m0 6h5"></path>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-semibold text-gray-800">
              {getTranslation("home.suggestions.card", currentLang)}
            </h3>
            <p class="text-gray-600">
              {getTranslation("home.suggestions.desc", currentLang)}
            </p>
          </div>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
