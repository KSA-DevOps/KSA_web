---
import BaseLayout from "@layout/BaseLayout.astro";
import { getTranslation } from "@utils/i18n";

// URL 파라미터에서 언어 추출
const { lang } = Astro.params;
const currentLang: 'ko' | 'en' = (lang === 'ko' || lang === 'en') ? lang : 'ko';
---

<BaseLayout lang={currentLang}>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-teal-50 to-blue-50">
    <div class="absolute inset-0 bg-black/20 pt-header"></div>
    <div class="relative z-10 text-center px-4">
      <h1 class="text-6xl md:text-8xl font-bold text-white mb-6 drop-shadow-lg">
        {getTranslation('home.title', currentLang)}
      </h1>
      <p class="text-xl md:text-2xl text-white mb-8 drop-shadow-lg max-w-3xl mx-auto">
        {getTranslation('home.subtitle', currentLang)}
      </p>
      <p class="text-lg text-white/90 mb-12 drop-shadow-lg">
        {getTranslation('home.mission', currentLang)}
      </p>
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/{currentLang}/about" class="bg-white text-teal-800 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            {getTranslation('home.about.button', currentLang)}
          </a>
          <a href="/{currentLang}/events" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-teal-800 transition-colors">
            {getTranslation('home.events.button', currentLang)}
          </a>
        </div>
    </div>
  </section>

  <!-- Quick Links Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-16 text-gray-800">{getTranslation('home.quick.links', currentLang)}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <a href="/{currentLang}/about" class="group">
          <div class="bg-teal-50 p-8 rounded-xl text-center hover:bg-teal-100 transition-colors">
            <div class="w-16 h-16 bg-teal-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-teal-700 transition-colors">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">{getTranslation('home.about.card', currentLang)}</h3>
            <p class="text-gray-600">{getTranslation('home.about.desc', currentLang)}</p>
          </div>
        </a>

        <a href="/{currentLang}/events" class="group">
          <div class="bg-blue-50 p-8 rounded-xl text-center hover:bg-blue-100 transition-colors">
            <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-blue-700 transition-colors">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">{getTranslation('home.events.card', currentLang)}</h3>
            <p class="text-gray-600">{getTranslation('home.events.desc', currentLang)}</p>
          </div>
        </a>

        <a href="/{currentLang}/contact" class="group">
          <div class="bg-orange-50 p-8 rounded-xl text-center hover:bg-orange-100 transition-colors">
            <div class="w-16 h-16 bg-orange-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-orange-700 transition-colors">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">{getTranslation('home.suggestion.card', currentLang)}</h3>
            <p class="text-gray-600">{getTranslation('home.suggestion.desc', currentLang)}</p>
          </div>
        </a>
      </div>
    </div>
  </section>

</BaseLayout>
