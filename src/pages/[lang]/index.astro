<script>
  // Client-side weather update management for landing page
  const WEATHER_TIMESTAMP_KEY = "ksa_weather_last_update";

  function getLastWeatherUpdateTime(): number | null {
    const timestamp = localStorage.getItem(WEATHER_TIMESTAMP_KEY);
    return timestamp ? parseInt(timestamp, 10) : null;
  }

  function setLastWeatherUpdateTime(timestamp?: number): void {
    const time = timestamp || Date.now();
    localStorage.setItem(WEATHER_TIMESTAMP_KEY, time.toString());
    console.log(
      `üíæ Weather timestamp saved: ${new Date(time).toLocaleString()}`,
    );
  }

  function shouldUpdateWeatherData(): boolean {
    const lastUpdate = getLastWeatherUpdateTime();
    if (!lastUpdate) {
      console.log("üìÖ No localStorage timestamp found - should update");
      return true;
    }

    const now = Date.now();
    const oneHour = 60 * 60 * 1000; // 1 hour in milliseconds
    const timeDiff = now - lastUpdate;
    const shouldUpdate = timeDiff >= oneHour;

    console.log(
      `üìÖ Last weather update: ${new Date(lastUpdate).toLocaleString()}`,
    );
    console.log(
      `üìÖ Time difference: ${Math.round(timeDiff / (60 * 1000))} minutes`,
    );
    console.log(`üìÖ Should update: ${shouldUpdate}`);

    return shouldUpdate;
  }

  // Check if weather data should be updated and refresh if needed
  function checkAndRefreshWeather() {
    if (shouldUpdateWeatherData()) {
      console.log("‚è∞ Client-side: Weather update needed, refreshing page...");
      setLastWeatherUpdateTime();
      // Reload the page to get fresh data
      window.location.reload();
    } else {
      console.log("‚úÖ Weather data is still fresh");
    }
  }

  // Run the check when page loads
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", checkAndRefreshWeather);
  } else {
    checkAndRefreshWeather();
  }
</script>
