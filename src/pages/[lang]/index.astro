---
import BaseLayout from "@layout/BaseLayout.astro";
import { getTranslation } from "@utils/i18n";

// Static paths for language routes
export function getStaticPaths() {
  return [
    { params: { lang: 'ko' } },
    { params: { lang: 'en' } }
  ];
}

// URL 파라미터에서 언어 추출
const { lang } = Astro.params;
const currentLang: 'ko' | 'en' = (lang === 'ko' || lang === 'en') ? lang : 'ko';
---

<BaseLayout lang={currentLang}>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-teal-50 to-blue-50">
    <div class="absolute inset-0 bg-black/20 pt-header"></div>
    <div class="relative z-10 text-center px-4">
      <h1 class="text-6xl md:text-8xl font-bold text-white mb-6 drop-shadow-lg">
        {getTranslation('home.title', currentLang)}
      </h1>
      <p class="text-xl md:text-2xl text-white mb-8 drop-shadow-lg max-w-3xl mx-auto">
        {getTranslation('home.subtitle', currentLang)}
      </p>
      <p class="text-lg text-white/90 mb-12 drop-shadow-lg">
        {getTranslation('home.mission', currentLang)}
      </p>
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={`/${currentLang}/board/career`} class="bg-white text-teal-800 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            커리어
          </a>
          <a href={`/${currentLang}/events/news`} class="bg-white text-teal-800 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            소식
          </a>
        </div>
    </div>
  </section>

  <!-- Quick Links Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-16 text-gray-800">{getTranslation('home.quick.links', currentLang)}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <a href={`/${currentLang}/board/career`} class="group">
          <div class="bg-teal-50 p-8 rounded-xl text-center hover:bg-teal-100 transition-colors">
            <div class="w-16 h-16 bg-teal-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-teal-700 transition-colors">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2h8z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">커리어</h3>
            <p class="text-gray-600">진로 정보 및 커리어 가이드</p>
          </div>
        </a>

        <a href={`/${currentLang}/events/news`} class="group">
          <div class="bg-teal-50 p-8 rounded-xl text-center hover:bg-teal-100 transition-colors">
            <div class="w-16 h-16 bg-teal-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-teal-700 transition-colors">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">소식</h3>
            <p class="text-gray-600">최신 공지사항 및 뉴스</p>
          </div>
        </a>

        <a href={`/${currentLang}/board/career`} class="group">
          <div class="bg-teal-50 p-8 rounded-xl text-center hover:bg-teal-100 transition-colors">
            <div class="w-16 h-16 bg-teal-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-teal-700 transition-colors">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">채용게시판</h3>
            <p class="text-gray-600">인턴십 및 취업 정보</p>
          </div>
        </a>

        <a href={`/${currentLang}/clubs`} class="group">
          <div class="bg-teal-50 p-8 rounded-xl text-center hover:bg-teal-100 transition-colors">
            <div class="w-16 h-16 bg-teal-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-teal-700 transition-colors">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">동아리</h3>
            <p class="text-gray-600">학생 동아리 및 모임 정보</p>
          </div>
        </a>
      </div>
    </div>
  </section>

</BaseLayout>
