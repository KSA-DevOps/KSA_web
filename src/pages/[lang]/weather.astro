---
import BaseLayout from "../../layout/BaseLayout.astro";
import WeatherClientPage from "../../components/WeatherClientPage.svelte";

// Static paths for language routes
export function getStaticPaths() {
  return [{ params: { lang: "ko" } }, { params: { lang: "en" } }];
}

// URL 파라미터에서 언어 추출
const { lang } = Astro.params;
const currentLang: "ko" | "en" = lang === "ko" || lang === "en" ? lang : "ko";
---

<BaseLayout lang={currentLang}>
  <!-- Weather content is now rendered client-side with identical styling -->
  <WeatherClientPage client:load lang={currentLang} />
</BaseLayout>
