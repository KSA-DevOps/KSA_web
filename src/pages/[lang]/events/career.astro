---
import BaseLayout from "@layout/BaseLayout.astro";
import { getTranslation } from "@utils/i18n";

// URL 파라미터에서 언어 추출
const { lang } = Astro.params;
const currentLang: 'ko' | 'en' = (lang === 'ko' || lang === 'en') ? lang : 'ko';

// 커리어 이벤트 정보
const careerEvents = [
  {
    title: currentLang === 'ko' ? '커리어 토크' : 'Career Talk',
    date: 'Monthly',
    description: currentLang === 'ko'
      ? '다양한 분야의 전문가들을 초청하여 경력 개발에 대한 조언을 제공합니다.'
      : 'Invites experts from various fields to provide career development advice.',
    icon: '🎤'
  },
  {
    title: currentLang === 'ko' ? '인턴십 정보 세션' : 'Internship Information Session',
    date: 'Quarterly',
    description: currentLang === 'ko'
      ? '인턴십 기회와 지원 방법에 대한 정보를 제공합니다.'
      : 'Provides information about internship opportunities and application methods.',
    icon: '💼'
  },
  {
    title: currentLang === 'ko' ? '네트워킹 이벤트' : 'Networking Event',
    date: 'Bi-monthly',
    description: currentLang === 'ko'
      ? '졸업생들과의 네트워킹 기회를 제공합니다.'
      : 'Provides networking opportunities with alumni.',
    icon: '🤝'
  },
  {
    title: currentLang === 'ko' ? '이력서 워크샵' : 'Resume Workshop',
    date: 'Semester',
    description: currentLang === 'ko'
      ? '이력서 작성과 면접 준비에 대한 실습 워크샵을 제공합니다.'
      : 'Provides hands-on workshops for resume writing and interview preparation.',
    icon: '📝'
  }
];
---

<BaseLayout lang={currentLang} title={getTranslation('events.career.title', currentLang)}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-teal-50 to-blue-50">
    <div class="container mx-auto px-4 pt-header">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-800 mb-4">
          {getTranslation('events.career.title', currentLang)}
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          {getTranslation('events.career.subtitle', currentLang)}
        </p>
      </div>
    </div>
  </section>

  <!-- Career Events -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {careerEvents.map((event) => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <div class="p-6">
              <div class="flex items-center justify-between mb-4">
                <span class="text-4xl">{event.icon}</span>
                <span class="text-sm text-teal-600 font-medium">{event.date}</span>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-3">{event.title}</h3>
              <p class="text-gray-600 leading-relaxed">{event.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

