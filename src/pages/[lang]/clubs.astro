---
import BaseLayout from "@layout/BaseLayout.astro";
import { getTranslation } from "@utils/i18n";
import { clubs, getColorValue, type ColorKey } from "../../data/clubs";

// Static paths for language routes
export function getStaticPaths() {
  return [
    { params: { lang: 'ko' } },
    { params: { lang: 'en' } }
  ];
}

// URL 파라미터에서 언어 추출
const { lang } = Astro.params;
const currentLang: 'ko' | 'en' = (lang === 'ko' || lang === 'en') ? lang : 'ko';
---

<BaseLayout lang={currentLang} title={getTranslation('clubs.title', currentLang)}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-teal-50 to-blue-50">
    <div class="container mx-auto px-4 pt-header">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-800 mb-4">
          {getTranslation('clubs.title', currentLang)}
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          {getTranslation('clubs.subtitle', currentLang)}
        </p>
      </div>
    </div>
  </section>

  <!-- Active Clubs Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">
          {currentLang === 'ko' ? '활동 중인 동아리' : 'Active Clubs'}
        </h2>
        <p class="text-lg text-gray-600">
          {currentLang === 'ko' 
            ? '현재 HKUST KSA에서 활동하고 있는 동아리들을 소개합니다.' 
            : 'Introducing the clubs currently active at HKUST KSA.'}
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {clubs.map((club) => (
          <a href={`/${currentLang}/clubs/${club.key}`} class="group">
            <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100 hover:shadow-xl transition-all duration-300 group-hover:-translate-y-1">
              <div class="text-center mb-4">
                <div class="w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 transition-transform group-hover:scale-110" style={`background-color: ${getColorValue(club.bgColor as ColorKey)}`}>
                  <span class="text-2xl text-white">{club.emoji}</span>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2 group-hover:text-teal-600 transition-colors">{club.nameKo}</h3>
                <p class="text-sm text-gray-600 mb-4">{club.subtitleEn}</p>
              </div>
              <div class="space-y-3">
                <div class="flex justify-between items-center">
                  <span class="text-sm font-medium text-gray-700">{currentLang === 'ko' ? '회장' : 'President'}</span>
                  <span class="text-sm text-gray-600">{club.president || '-'}</span>
                </div>
                <div class="pt-2 border-t border-gray-100">
                  <span class="text-xs text-gray-500 group-hover:text-teal-500 transition-colors">
                    {currentLang === 'ko' ? '자세히 보기 →' : 'Learn more →'}
                  </span>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

