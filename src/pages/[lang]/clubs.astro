---
import BaseLayout from "@layout/BaseLayout.astro";
import { getTranslation } from "@utils/i18n";

// URL 파라미터에서 언어 추출
const { lang } = Astro.params;
const currentLang: 'ko' | 'en' = (lang === 'ko' || lang === 'en') ? lang : 'ko';
---

<BaseLayout lang={currentLang} title={getTranslation('clubs.title', currentLang)}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-teal-50 to-blue-50">
    <div class="container mx-auto px-4">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-800 mb-4">
          {getTranslation('clubs.title', currentLang)}
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          {getTranslation('clubs.subtitle', currentLang)}
        </p>
      </div>
    </div>
  </section>

  <!-- Coming Soon Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center">
        <div class="max-w-2xl mx-auto">
          <div class="mb-8">
            <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-800 mb-4">
            {getTranslation('clubs.coming', currentLang)}
          </h2>
          <p class="text-lg text-gray-600 mb-8">
            {currentLang === 'ko' 
              ? 'KSA 동아리 정보가 곧 업데이트될 예정입니다. 조금만 기다려 주세요!' 
              : 'KSA clubs information will be updated soon. Please stay tuned!'}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={`/${currentLang}/events`} class="bg-teal-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-teal-700 transition-colors">
              {currentLang === 'ko' ? '행사 보기' : 'View Events'}
            </a>
            <a href={`/${currentLang}/contact`} class="border-2 border-teal-600 text-teal-600 px-8 py-3 rounded-lg font-semibold hover:bg-teal-600 hover:text-white transition-colors">
              {getTranslation('contact.contact.button', currentLang)}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Future Clubs Preview -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">
          {currentLang === 'ko' ? '예정된 동아리들' : 'Upcoming Clubs'}
        </h2>
        <p class="text-lg text-gray-600">
          {currentLang === 'ko' 
            ? '곧 출시될 예정인 KSA 동아리들을 미리 살펴보세요.' 
            : 'Take a preview of KSA clubs that will be launched soon.'}
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl text-white">🎵</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-800 mb-2">
            {currentLang === 'ko' ? 'K-Pop 댄스' : 'K-Pop Dance'}
          </h3>
          <p class="text-sm text-gray-600">
            {currentLang === 'ko' ? 'K-Pop 댄스를 배우고 공연하는 동아리' : 'Club for learning and performing K-Pop dances'}
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl text-white">🎨</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-800 mb-2">
            {currentLang === 'ko' ? '한국 미술' : 'Korean Art'}
          </h3>
          <p class="text-sm text-gray-600">
            {currentLang === 'ko' ? '한국 전통 미술과 현대 미술을 탐구하는 동아리' : 'Club exploring traditional and modern Korean art'}
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl text-white">⚽</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-800 mb-2">
            {currentLang === 'ko' ? '스포츠' : 'Sports'}
          </h3>
          <p class="text-sm text-gray-600">
            {currentLang === 'ko' ? '다양한 스포츠 활동을 즐기는 동아리' : 'Club for enjoying various sports activities'}
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout> 